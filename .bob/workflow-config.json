{
  "workflow": {
    "name": "Bob Automated SDLC Workflow",
    "version": "1.0.0",
    "description": "Automated workflow for Jira ticket implementation with full testing and PR creation"
  },
  "jira": {
    "assignee": "bobdev",
    "project_key": "KAN",
    "auto_check_interval": false,
    "use_mcp_tools": true,
    "status_transitions": {
      "start": "In Progress",
      "review": "In Review",
      "done": "Done"
    },
    "duplicate_detection": {
      "enabled": true,
      "check_status": ["In Progress", "In Review"],
      "skip_if_pr_exists": true
    }
  },
  "github": {
    "base_branch": "demo-dev",
    "branch_naming": "feature/{ticket-key}-{description}",
    "use_mcp_tools": true,
    "auto_create_pr": true,
    "pr_review_handling": {
      "enabled": true,
      "auto_respond": true,
      "check_for_reviews": true,
      "create_new_task_on_comment": true
    }
  },
  "development": {
    "auto_restart_server": true,
    "test_before_pr": true,
    "ports": {
      "frontend": 3000,
      "backend": 3001
    },
    "startup_commands": {
      "dev": "npm run dev",
      "frontend": "cd frontend && npm start",
      "backend": "cd backend && npm run dev"
    }
  },
  "workflow_steps": [
    {
      "step": 1,
      "name": "Check for new Jira tasks",
      "action": "jira_get_assigned_tickets",
      "params": {
        "assignee": "bobdev"
      },
      "required": true
    },
    {
      "step": 2,
      "name": "Update Jira status to In Progress",
      "action": "jira_update_status",
      "params": {
        "status": "In Progress"
      },
      "required": true
    },
    {
      "step": 3,
      "name": "Analyze and implement",
      "actions": [
        "read_relevant_files",
        "implement_changes",
        "fix_linting_errors"
      ],
      "required": true
    },
    {
      "step": 4,
      "name": "Restart and verify servers",
      "actions": [
        "kill_existing_servers",
        "start_dev_servers",
        "verify_ports_listening"
      ],
      "required": true,
      "retry_on_failure": true,
      "max_retries": 3
    },
    {
      "step": 5,
      "name": "Test in browser",
      "actions": [
        "launch_browser",
        "login_if_needed",
        "navigate_to_feature",
        "test_functionality",
        "verify_all_features_work"
      ],
      "required": true,
      "retry_on_failure": true
    },
    {
      "step": 6,
      "name": "Create feature branch",
      "action": "git_checkout_branch",
      "required": true
    },
    {
      "step": 7,
      "name": "Commit changes",
      "action": "git_commit",
      "params": {
        "message_format": "[{ticket-key}] {summary}\n\n{detailed_changes}"
      },
      "required": true
    },
    {
      "step": 8,
      "name": "Push to GitHub",
      "action": "git_push",
      "required": true
    },
    {
      "step": 9,
      "name": "Create Pull Request",
      "action": "github_create_pr",
      "params": {
        "title_format": "[{ticket-key}] {summary}",
        "include_testing_details": true,
        "link_jira_ticket": true
      },
      "required": true
    },
    {
      "step": 10,
      "name": "Update Jira with PR link",
      "action": "jira_add_comment",
      "params": {
        "include_pr_url": true,
        "update_status": "In Review"
      },
      "required": true
    }
  ],
  "error_handling": {
    "on_test_failure": "retry_and_fix",
    "on_server_failure": "restart_and_retry",
    "on_implementation_error": "analyze_and_fix",
    "max_retries_per_step": 3
  },
  "validation": {
    "require_all_tests_pass": true,
    "require_server_running": true,
    "require_browser_verification": true,
    "require_no_console_errors": false
  }
}